<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="sim" default="false" />

  <!-- Helper node to republish move_base commands for remote debugging -->
  <node name="move_goal_republisher" pkg="remote_strategy" type="move_goal_republisher.py" />

  <!-- Launch the remote controller -->
  <node name="remote_controller" pkg="remote_strategy" type="controller_node.py" />

  <!-- Launch the recovery server -->
  <node name="remote_strategy" pkg="remote_strategy" type="server_node.py" output="screen" />
</launch>
